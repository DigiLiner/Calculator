<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

   

    <style name="AppTheme.HcButtonRed" parent="Widget.AppCompat.Button.Borderless">
      <item name="android:background">@drawable/hcbutton_red</item>
      <item name="android:gravity">center</item>
      <item name="android:includeFontPadding">false</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:textAllCaps">false</item>
      <item name="android:typeface">normal</item>
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_weight">@dimen/hcbutton_weight</item>
      <item name="android:textColor">@color/hcbutton_textcolor</item>
      <item name="android:textSize">@dimen/hcbutton_textsize</item>
      <item name="android:layout_margin">@dimen/hcbutton_margin</item>
    </style>

